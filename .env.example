# PostgreSQL Configuration
POSTGRES_USER=library_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database Names
AUTHORS_DB_NAME=authors_db
BOOKS_DB_NAME=books_db

# Authors Service Configuration
AUTHORS_SERVICE_PORT=8001
AUTHORS_DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${AUTHORS_DB_NAME}

# Books Service Configuration
BOOKS_SERVICE_PORT=8002
BOOKS_DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${BOOKS_DB_NAME}

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development
